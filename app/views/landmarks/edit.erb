<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id%>" method='post'>
    <input type='hidden' name='_method' value='patch' />

<h5>Name: </h5> <input id='name' type='text' name="landmark[name]" value="<%= @landmark.name %>"/>
<h5>Year Completed: </h5> <input id='year_completed' type='text' name="landmark[year_completed]" value='<%= @landmark.year_completed %>' />

<h3>Figures</h3>
<% @figures.each do |figure| %>
    <input id="figure_<%= figure.id %>" type="radio" name="figure_id" value="<%= figure.id %>" <%='checked' if figure.landmarks.include?(@landmark) %>><%= figure.name %><br/>
<% end %>

<h3>Create New Figure</h3>
<input id='new_figure' type='text' name="figure[name]" />

<input type='submit' value='Edit Landmark' />

</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
